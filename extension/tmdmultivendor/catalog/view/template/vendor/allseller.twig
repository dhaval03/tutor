<link href="extension/tmdmultivendor/catalog/view/stylesheet/vendor/vendor.css" rel="stylesheet">
{{ header }}
<div class="container">
  <ul class="breadcrumb">
    {% for breadcrumb in breadcrumbs %}
      <li class="breadcrumb-item"><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
    {% endfor %}
  </ul>
  {% if success %}
  <div class="alert alert-success"><i class="fa fa-check-circle"></i> {{ success }}</div>
  {% endif %}
    <div class="row">{{ column_left }}
    {% if column_left and column_right %}
    {% set class = 'col-sm-6' %}
    {% elseif column_left or column_right %}
    {% set class = 'col-sm-9' %}
    {% else %}
    {% set class = 'col-sm-12' %}
    {% endif %}
    <div id="content" class="{{ class }}">{{ content_top }}
      <h2>{{ heading_title }}</h2>
			<div class="row row-cols-2 row-cols-sm-2 row-cols-md-3 row-cols-xl-3">
				{% for vendor in vendors %}
					<div class="col">
						<div class="product-thumb transition allseller">
							<div class="image">
								<a href="{{ vendor.href }}"><img src="{{ vendor.thumb }}" alt="{{ vendor.firstname }}" title="{{ vendor.firstname }}" class="img-fluid" /></a>
							  <div class="smalimage">
								  <img src="{{ vendor.smallthumb }}" class="img-fluid" />
							  </div>
							</div>
							<div class="caption">
								<p> {{ text_sellertotal }}
								<span class="label {% if vendor.totalproduct == 0  %} btn-danger {% else %} btn-success {% endif %} countproduct">{{ vendor.totalproduct }}</span>
								</p>
								
								<h4><a href="{{ vendor.href }}"><i class="fa fa-home"></i>{{ vendor.storename }}</a></h4>
								<ul class="list-unstyled user-links">
								  {% if vendor_hidevname %}
								  <li><i class="fa fa-user"></i> {{ vendor.firstname }}</li> 
								  {% endif %}
								   {% if vendor_hidevemail %}
								  <li><i class="fa fa-envelope"></i> {{ vendor.email }}</li>
								   {% endif %}
									{% if vendor_hidevponeno %}
								  <li><i class="fa fa-phone-alt"></i> {{ vendor.telephone }}</li>
								   {% endif %}
								</ul>
								{% if vendor_hidevsocialicon %}
									<ul class="list-inline social-icons">
									
									  <li><a href="{{ vendor.facebookurl }}" target="new"><i class="fab fa-facebook" ></i></a></li>
									  <li><a href="{{ vendor.googleurl }}" target="new"><i class="fab fa-google"></i></a></li>
									  <li><a href="{{ vendor.whatsappurl }}" target="new"><i class="fab fa-whatsapp" ></i></a></li>
									  <li><a href="{{ vendor.instagramurl }}" target="new"><i class="fab fa-instagram"></i></a></li>
									  <li><a href="{{ vendor.twitterurl }}" target="new"><i class="fab fa-twitter"></i></a></li>
									  <li><a href="{{ vendor.snapchaturl }}" target="new"><i class="fab fa-snapchat-ghost"></i></a></li>
									  <li><a href="{{ vendor.pinteresturl }}" target="new"><i class="fab fa-pinterest"></i></a></li>
									  <li><a href="{{ vendor.youtubeurl }}" target="new"><i class="fab fa-youtube"></i></a></li>
									  <li><a href="{{ vendor.linkedinurl }}" target="new"><i class="fab fa-linkedin-in"></i></a></li>
									  <li><a href="{{ vendor.tiktokurl }}" target="new"><i class="fas fa-music"></i></a></li>
									
									</ul>
								{% endif %}
							</div>
						</div>
					</div>
				{% endfor %}
			</div> 
      <div class="row">
			  <div class="col-sm-6 text-start">{{ pagination }}</div>
          <div class="col-sm-6 text-end">{{ results }}</div>
			</div>     
        {{ content_bottom }}</div>
    {{ column_right }}</div>
</div>
{{ footer }}