<script type="text/javascript">
$('input[name=\'vendor\']').autocomplete({
	'source': function(request, response) {
		$.ajax({
			url: 'index.php?route=extension/tmdmultivendor/vendor/vendor|autocomplete&user_token={{ user_token }}&filter_name=' +  encodeURIComponent(request),
			dataType: 'json',
			success: function(json) {
				json.unshift({
					vendor_id: 0,
					vendorname:'{{ text_none }}'
				});

				response($.map(json, function(item) {
					return {
						label: item['vendorname'],
						value: item['vendor_id']
					}
				}));
			}
		});
	},
	'select': function(item) {
		$('.payments').load('index.php?route=extension/tmdmultivendor/vendor/income|getPaymentMethod&user_token={{ user_token }}&vendor_id=' +item['value']);
		
		$('input[name=\'vendor\']').val(item['label']);
		$('input[name=\'vendor_id\']').val(item['value']);
	}
});
</script>



{{ footer }}