{{ header }}{{ column_left }}
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <div class="float-end">
        <button type="submit" form="form-module" data-bs-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fas fa-save"></i></button>
        <a href="{{ back }}" data-bs-toggle="tooltip" title="{{ button_back }}" class="btn btn-light"><i class="fas fa-reply"></i></a></div>
      <h1>{{ heading_title }}</h1>
      <ol class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
          <li class="breadcrumb-item"><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ol>
    </div>
  </div>
  {{ getkeyform }}
  <div class="container-fluid">
    <div class="card">
      <div class="card-header"><i class="fas fa-pencil-alt"></i> {{ text_edit }}</div>
      <div class="card-body">
        <form id="form-module" action="{{ save }}" method="post" data-oc-toggle="ajax">
          
          <div class="row mb-3">
            <label class="col-sm-2 col-form-label" for="input-imagetype">{{ entry_imgbotrder }}</label>
            <div class="col-sm-6">
              <select name="module_tmdvendor_imagetype" id="input-imagetype" class="form-control">
                {% if module_tmdvendor_imagetype=='round' %}
                <option value="round" selected="selected">{{ entry_round }}</option>
                <option value="rect">{{ entry_squre }}</option>
                {% else %}
                <option value="round">{{ entry_round }}</option>
                <option value="rect" selected="selected">{{ entry_squre }}</option>
                {% endif %}
              </select>
            </div>
          </div>
          <div class="row mb-3">
            <label class="col-sm-2 col-form-label" for="input-bgcolor">{{ entry_bgcolor }}</label>
            <div class="col-sm-6">
              <input type="text" name="module_tmdvendor_bgcolor" value="{{ module_tmdvendor_bgcolor }}" placeholder="{{ entry_bgcolor }}" id="input-bgcolor" class="form-control demo" />
            </div>
          </div>
          <div class="row mb-3">
            <label class="col-sm-2 col-form-label" for="input-textcolor">{{ entry_textcolor }}</label>
            <div class="col-sm-6">
              <input type="text" name="module_tmdvendor_textcolor" value="{{ module_tmdvendor_textcolor }}" placeholder="{{ entry_textcolor }}" id="input-textcolor" class="form-control demo" />
            </div>
          </div>
          <div class="row mb-3">
            <label class="col-sm-2 col-form-label" for="input-imgsize">{{ entry_imgsize }}</label>
            <div class="col-sm-3">
              <input type="text" name="module_tmdvendor_imgwidth" value="{{ module_tmdvendor_imgwidth }}" placeholder="{{ entry_imgwidth }}" id="input-imgsize" class="form-control" />
            </div>
            <div class="col-sm-3">
              <input type="text" name="module_tmdvendor_imgheight" value="{{ module_tmdvendor_imgheight }}" placeholder="{{ entry_imgheight }}" id="input-imgsize" class="form-control" />
            </div>
          </div>
      
          <div class="row mb-3">
            <label for="input-status" class="col-sm-2 col-form-label">{{ entry_status }}</label>
            <div class="col-sm-9">
              <select name="module_tmdvendor_status" id="input-status" class="form-select">
                <option value="1"{% if module_tmdvendor_status %} selected="selected"{% endif %}>{{ text_enabled }}</option>
                <option value="0"{% if not module_tmdvendor_status %} selected="selected"{% endif %}>{{ text_disabled }}</option>
              </select>
            </div>
          </div>


        </form>
      </div>
    </div>
  </div>

  <script src="{{HTTP_CATALOG}}extension/tmdmultivendor/admin/view/javascript/colorbox/jquery.minicolors.js"></script>
<link rel="stylesheet" href="{{HTTP_CATALOG}}extension/tmdmultivendor/admin/view/javascript/colorbox/jquery.minicolors.css">
