{{ header }}{{ column_left }}
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
       <h1>{{ heading_title }}</h1>
      <ol class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
          <li class="breadcrumb-item"><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ol>
    </div>
  </div>
  <div class="container-fluid">

    <div class="card">
		<div class="card-header"><i class="fas fa-pencil-alt"></i> {{ text_bulklist }}</div>
		<div class="card-body">
			<div class="row">
				<div class="col-sm-12" style="text-align:left;">
					<div>
						<label class="control-label col-form-label" for="input-name" style="  font-weight: normal; ">{{ entry_time_allowed }}</label><label style="font-weight: bold;">{{ timeallowed }}</label>
					</div>
					<div>
						<label class="control-label col-form-label" for="input-name" style=" font-weight: normal ">{{ entry_file_size }}</label><label style="font-weight: bold;">{{ filesize }}</label>
					</div>
				</div>
			</div>

      <form class="form-horizontal" action="{{ export }}" method="post" enctype="multipart/form-data" id="form-bulkshipping">

			<div class="card-heading">
				<h3 class="card-title"><i class="fa fa-download"></i>{{ entry_export }}</h3>
			</div>
			<div class="well">
				<div class="row mb-3">
					<div class="col-sm-4" style="text-align:left;">
						<label class="control-label col-form-label" for="input-name" >{{ entry_seller }}</label>
						<select name="vendor_id" id="input-status" class="form-control">
							<option value="">{{ text_select }}</option>
							{% for seller in sellers %}
							{% if seller.vendor_id == vendor_id %}
							<option value="{{ seller.vendor_id }}" selected="selected">{{ seller.firstname }} ({{ seller.name }})</option>
							{% else %}
							<option value="{{ seller.vendor_id }}">{{ seller.firstname }} ({{ seller.name }})</option>
							{% endif %}
							{% endfor %}
						</select>
					</div>
					
					<div class="col-sm-2">
						<!-- <a href="{{ export }}"> -->
							<button type="submit" class="btn btn-primary" style="margin-top: 36px;">{{ entry_export }}</button>
						<!-- </a> -->
					</div>
				</div>
			</div>
		</form>
		<form action="{{ import }}" method="post" enctype="multipart/form-data" id="import">
			<div class="card-heading">
				<h3 class="card-title "><i class="fa fa-upload"></i> {{ entry_upload }}</h3>
			</div>
			<div class="well">
				<div class="row mb-3">
					<div class="col-sm-4" style="text-align:left;">
						<label class="control-label col-form-label" for="input-name" >{{ entry_seller }}</label>
						<select name="vendor_id" id="input-status" class="form-control">
							<option value="">{{ text_select }}</option>
							{% for seller in sellers %}
							{% if seller.vendor_id == vendor_id %}
							<option value="{{ seller.vendor_id }}" selected="selected">{{ seller.firstname }} ({{ seller.name }})</option>
							{% else %}
							<option value="{{ seller.vendor_id }}">{{ seller.firstname }} ({{ seller.name }})</option>
							{% endif %}
							{% endfor %}
						</select>
					</div>
					<div class="row col-sm-4">
						<input type="file" style="height:35px; margin-top: 40px;"  name="import">
					</div>
				</div>
				<div class="mb-3">
					<!-- <a href="{{ import }}"> -->
						<button type="submit" class="btn btn-primary">{{ button_upload }}</button>
					<!-- </a> -->
				</div>
			</div>
		</form>
		
    </div>
  </div>
</div>



{{ footer }}