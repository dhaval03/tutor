  var filter_enqname = $('#input-name').val();
  
  if (filter_enqname) {
    url += '&filter_enqname=' + encodeURIComponent(filter_enqname);
  }

   var filter_date_added = $('#input-date-added').val();

    if (filter_date_added) {
        url += '&filter_date_added=' + encodeURIComponent(filter_date_added);
    }
  
   $('#inquiry').load('index.php?route=extension/tmdmultivendor/vendor/enquiry|list&' + url);
});
