{{ header }}{{ column_left }}
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <div class="float-end">
         <a href="{{ bulkshipping }}" data-toggle="tooltip" title="{{ button_bulkupload }}" class="btn btn-primary">{{ button_bulkupload }}</a>
        <button type="button" data-bs-toggle="tooltip" title="{{ button_filter }}" onclick="$('#filter-shipping').toggleClass('d-none');" class="btn btn-light d-md-none d-lg-none"><i class="fa fa-filter"></i></button>
        <a href="{{ add }}" data-bs-toggle="tooltip" title="{{ button_add }}" class="btn btn-primary"><i class="fa fa-plus"></i></a>
        <button type="submit" form="form-shippings" formaction="{{ delete }}" data-bs-toggle="tooltip" title="{{ button_delete }}" onclick="return confirm('{{ text_confirm }}');" class="btn btn-danger"><i class="fa fa-trash"></i></button>
      </div>
      <h1>{{ heading_title }}</h1>
      <ol class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
          <li class="breadcrumb-item"><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ol>
    </div>
  </div>
  <div class="container-fluid">
    <div class="row">
      <div id="filter-shipping" class="col-lg-3 col-md-12 order-lg-last d-none d-lg-block mb-3">
        <div class="card">
          <div class="card-header"><i class="fa fa-filter"></i> {{ text_filter }}</div>
          <div class="card-body">         
            <div class="mb-3">
              <label class="control-label" for="input-filter_country">{{ column_country }} </label>
              <select name="filter_country" id="input-country" class="form-control">
                <option value="">{{ text_select }}</option>
                {% for country in countries %}
                {% if country.country_id == filter_country %}
                <option value="{{ country.country_id }}" selected="selected">{{ country.name }}</option>
                {% else %}
                <option value="{{ country.country_id }}">{{ country.name }}</option>
                {% endif %}
                {% endfor %}
              </select>
            </div>

            <div class="mb-3">
              <label class="control-label" for="input-price">{{ column_price }} </label>
              <input type="text" name="filter_price" value="{{ filter_price }}" placeholder="{{ column_price }}" id="input-price" class="form-control" />
            </div>


            <div class="mb-3">
              <label class="control-label" for="input-zipfrom">{{ column_zipfrom }} </label>
              <input type="text" name="filter_zipfrom" value="{{ filter_zipfrom }}" placeholder="{{ column_zipfrom }}" id="input-zipfrom" class="form-control" />
            </div>

           
         
         <div class="mb-3">
              <label class="control-label" for="input-weightfrom">{{ column_weightfrom }} </label>
              <input type="text" name="filter_weightfrom" value="{{ filter_weightfrom }}" placeholder="{{ column_weightfrom }}" id="input-weightfrom" class="form-control" />
            </div>

            <div class="mb-3">
              <label class="control-label" for="input-weightto">{{ column_weightto }} </label>
              <input type="text" name="filter_weightto" value="{{ filter_weightto }}" placeholder="{{ column_weightto }}" id="input-weightto" class="form-control" />
            </div>
         
            <div class="text-end">
                <button type="button" id="button-filter" class="btn btn-primary pull-right"><i class="fa fa-search"></i> {{ button_filter }}</button>

            </div>

          </div>
        </div>
      </div>
      <div class="col-lg-9 col-md-12">
        <div class="card">
          <div class="card-header"><i class="fa fa-list"></i> {{ text_list }}</div>
          <div id="shippings" class="card-body">{{ list }}</div>
        </div>
      </div>
    </div>
  </div>
</div>
