 <script type="text/javascript"><!--
$('input[name^=\'selected\']').on('change', function() {
  $('#button-order-report, #button-invoice').prop('disabled', true);

  var selected = $('input[name^=\'selected\']:checked');

  if (selected.length) {
    $('#button-invoice').prop('disabled', false);
  }

  for (i = 0; i < selected.length; i++) {
    if ($(selected[i]).parent().find('input[name^=\'order-report_code\']').val()) {
      $('#button-order-report').prop('disabled', false);

      break;
    }
  }
});

$('#button-order-report, #button-invoice').prop('disabled', true);

$('input[name^=\'selected\']:first').trigger('change');

// IE and Edge fix!
$('#button-order-report, #button-invoice').on('click', function(e) {
  $('#form-report').attr('action', this.getAttribute('formAction'));
});
//--></script> 
