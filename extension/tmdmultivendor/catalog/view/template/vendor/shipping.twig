<script type="text/javascript">
$('#button-filter').on('click', function() {
  var url = 'index.php?route=extension/tmdmultivendor/vendor/shipping';

  
  var filter_country = $('select[name=\'filter_country\']').val();

  if (filter_country) {
    url += '&filter_country=' + encodeURIComponent(filter_country);
  }
  

   var filter_zipfrom = $('#input-zipfrom').val();

    if (filter_zipfrom) {
        url += '&filter_zipfrom=' + encodeURIComponent(filter_zipfrom);
    }


    var filter_price = $('#input-price').val();

    if (filter_price) {
        url += '&filter_price=' + encodeURIComponent(filter_price);
    }


    var filter_weightto = $('#input-weightto').val();

    if (filter_weightto) {
        url += '&filter_weightto=' + encodeURIComponent(filter_weightto);
    }
 

    var filter_weightfrom = $('#input-weightfrom').val();

    if (filter_weightfrom) {
        url += '&filter_weightfrom=' + encodeURIComponent(filter_weightfrom);
    }
 
   $('#shippings').load('index.php?route=extension/tmdmultivendor/vendor/shipping|list&=' + url);

});
</script>

<script>
  $(document).on('click', '.docdelete',function(){
  var shipping_id = $(this).attr('rel');
  $.ajax({
  url: 'index.php?route=extension/tmdmultivendor/vendor/shipping|shippingdelete&shipping_id='+shipping_id,
  type:'post',
  dataType:'json',
  beforeSend: function() {
  },
  success: function(json) {
    if (json.success) {
      $('.tab-first').after('<div class="alert alert-success">' + json.success + '<button type="button" class="close" data-bs-  dismiss="alert">&times;</button></div>');
      $('.payeehide'+shipping_id).remove();  
       window.location.reload();               
    }
  }
});
   
});
  
</script>


